# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           		controllers.HomeController.index
POST 	/login	 							controllers.ControladorUsuario.entrar
GET		/logout								controllers.ControladorUsuario.sair

GET		/usuario/confirma/:email/:codigo	controllers.ControladorUsuario.confirmaCadastro(email, codigo)

GET		/painel								controllers.ControladorUsuario.mostraPainel

GET		/sobre								controllers.HomeController.mostraSobre

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file						controllers.Assets.versioned(path="/public", file: Asset)

GET 	/usuario 							controllers.ControladorUsuario.lista
# GET 	/usuario/novo 						controllers.ControladorUsuario.novoUsuario
GET 	/usuario/:id 						controllers.ControladorUsuario.detalhar(id:Long)
# POST 	/usuario/:id 						controllers.ControladorUsuario.alterar(id:Long)
POST 	/usuario/:id/remover 				controllers.ControladorUsuario.remover(id:Long)