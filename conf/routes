# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           		controllers.HomeController.index
POST 	/login	 							controllers.ControladorUsuario.entrar
GET		/logout								controllers.ControladorUsuario.sair

GET		/usuario/confirma/:email/:codigo	controllers.ControladorUsuario.confirmarCadastro(email, codigo)

GET		/painel								controllers.ControladorUsuario.mostrarPainel

GET		/painel/:ec							controllers.HomeController.mostrarEstudoDeCaso(ec:Boolean)
GET		/sobre								controllers.HomeController.mostrarSobre

POST	/estudo								controllers.ControladorEstudos.iniciarEstudoDeCaso
GET		/portal/:ec							controllers.ControladorEstudos.iniciarTarefa1(ec:Boolean)

GET		/evento/:id							controllers.ControladorEventos.detalhar(id:Long)
GET		/evento/:id/programa				controllers.ControladorEventos.mostrarPrograma(id:Long)
GET		/evento/:id/local					controllers.ControladorEventos.mostrarLocal(id:Long)
GET		/evento/:id/informacoes				controllers.ControladorEventos.mostrarInformacoes(id:Long)
GET		/evento/:id/pagamento				controllers.ControladorEventos.mostrarPagamento(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file						controllers.Assets.versioned(path="/public", file: Asset)

GET 	/usuario 							controllers.ControladorUsuario.lista
# GET 	/usuario/novo 						controllers.ControladorUsuario.novoUsuario
GET 	/usuario/:id 						controllers.ControladorUsuario.detalhar(id:Long)
# POST 	/usuario/:id 						controllers.ControladorUsuario.alterar(id:Long)
POST 	/usuario/:id/remover 				controllers.ControladorUsuario.remover(id:Long)